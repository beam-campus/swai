<div class="px-4 py-1 mx-5 text-white">
  <div>
    <% scapes_list =
      get_scapes_summary() %>

    <%!-- <.table    
    id="scapes-table"
    rows={scapes_list}
    row_click={fn {id, scape} -> JS.navigate(~p"/scapes/#{id}") end}
  >
    <:col :let={{_id, scape}} label="Name" class="text-white"><%= scape.name %></:col>
    <:col :let={{_id, scape}} label="Provisioned by"><%= scape.count %> station(s)</:col>
  </.table> --%>

    <div class="flex flex-col">
      <%= for {id, scape} <- scapes_list do %>
        <div class="flex flex-row justify-between gap-5 px-3 py-1">
          <div class="flex w-1/2 gap-4">            
            <p class="w-full font-bold hover:text-ltOrange-light text-ltOlive-light">
              <%= scape.name %>
            </p>
          </div>
          <div class="w-[300px]">
            <p><%= scape.count %> producer(s)</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
